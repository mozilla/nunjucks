{
  "name": "nunjucks-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "4.0.0-monorepo",
  "author": "Frankie Dintino <fdintino@gmail.com> (https://www.frankiedintino.com/)",
  "description": "A powerful templating engine with inheritance, asynchronous control, and more (jinja2 inspired)",
  "scripts": {
    "build": "lerna run build",
    "prepare:copy-readme": "ncp README.md packages/core/README.md",
    "report": "nyc report",
    "prepare": "yarn build && yarn prepare:copy-readme",
    "clean": "lerna run clean",
    "instrument": "lerna run instrument",
    "watch": "lerna run --parallel watch",
    "lint": "lerna run lint",
    "test": "lerna run instrument && lerna run test && yarn runtests && yarn report",
    "runtests": "cross-env NODE_ENV=test NODE_PATH=tests/test-node-pkgs scripts/runtests.js",
    "codecov": "codecov",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "publish": "lerna publish from-package",
    "check-packages": "yarn clean && yarn build && yarn test && yarn lint"
  },
  "browserslist": [
    "last 2 versions",
    "safari >= 8",
    "ie 9"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "loose": true,
          "corejs": 2,
          "useBuiltIns": "usage",
          "targets": {
            "node": "8"
          },
          "exclude": [
            "es6.set",
            "es6.map",
            "es6.symbol",
            "es6.regexp.split",
            "es6.regexp.match",
            "es6.regexp.replace",
            "es6.regexp.constructor",
            "es6.regexp.to-string",
            "es6.regexp.flags",
            "es6.function.name",
            "es6.typed.uint8-array"
          ]
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/transform-runtime",
        {
          "useESModules": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/nunjucks.git"
  },
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/mozilla/nunjucks/issues"
  },
  "homepage": "https://github.com/mozilla/nunjucks#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "ast-types": "^0.13.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "concurrently": "^4.1.1",
    "connect": "^3.7.0",
    "core-js": "2",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "expect.js": "^0.3.1",
    "express": "4.x",
    "get-port": "^5.0.0",
    "istanbul-lib-instrument": "^3.3.0",
    "lerna": "^3.15.0",
    "mocha": "^6.1.4",
    "mocha-phantomjs-core": "^2.1.2",
    "mocha-phantomjs-istanbul": "^0.0.2",
    "ncp": "^2.0.0",
    "nyc": "^14.1.1",
    "phantomjs-prebuilt": "^2.1.16",
    "promise": "^8.0.3",
    "promise-polyfill": "^8.1.3",
    "puppeteer": "^1.17.0",
    "recast": "^0.18.1",
    "rollup": "^1.15.6",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-resolve-id": "^1.0.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-pluginutils": "^2.8.1",
    "serve-static": "^1.14.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2",
    "uglify-js": "^3.6.0"
  },
  "dependencies": {},
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "eslintIgnore": [
    "packages/*/lib",
    "packages/*/test",
    "packages/*/dist",
    "coverage"
  ],
  "keywords": [
    "template",
    "templating"
  ]
}
